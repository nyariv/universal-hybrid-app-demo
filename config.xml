<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nyariv.math.addict" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Math Addict</name>
    <description>
        Math addict.
    </description>
    <author email="nyariv@gmail.com" href="https://github.com/nyariv">
        Nir Yariv
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/ldpi.png" />
        <icon density="mdpi" src="res/icon/android/mdpi.png" />
        <icon density="hdpi" src="res/icon/android/hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/portrait-hdpi.png" />
        <splash density="port-mdpi" src="res/screen/android/portrait-hdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/portrait-hdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/portrait-hdpi.png" />
        <splash density="port-xxhdpi" src="res/screen/android/portrait-hdpi.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/portrait-hdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
